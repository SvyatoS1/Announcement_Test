@page "{id:int}"
@model TestTask_Frontend.Pages.Announcements.DeleteModel
@{
    ViewData["Title"] = "Delete Announcement";
}

<h1>Delete Announcement</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Announcement</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Announcement.Title
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Announcement.Description
        </dd>
        <dt class="col-sm-2">
            Created Date
        </dt>
        <dd class="col-sm-10">
            @Model.Announcement.CreatedDate
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Model.Announcement.Status
        </dd>
        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10">
            @Model.Announcement.Category
        </dd>
        <dt class="col-sm-2">
            SubCategory
        </dt>
        <dd class="col-sm-10">
            @Model.Announcement.SubCategory
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Announcement.Id" />
        <button type="submit" class="btn btn-danger">Delete</button> |
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>